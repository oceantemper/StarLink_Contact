@model IEnumerable<StarLink_Contact.Models.Catagory>

@{
    ViewData["Title"] = "Index";
}







<div class="row">
    <div class="col-12 text-end mb-2">
        <a class="btn btn-primary rounded-pill" asp-action="Create" asp-controller="Catagories">Create New</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th colspan="2">
                        My Categories
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (Catagory catagory in Model)
                {
                    <tr>
                        <td>
                            @catagory.Name
                        </td>
                        <td class="d-flex justify-content-end">
                            <a class="me-3 editIcons" asp-action="Edit" asp-route-id="@catagory.Id"><i class="bi bi-pencil-fill"></i></a>
                            <a class="me-3 editIcons" asp-action="EmailCatagory" asp-route-id="@catagory.Id"><i class="bi bi-envelope-fill"></i></a>
                            <a class="editIcons text-danger" asp-action="Delete" asp-route-id="@catagory.Id"><i class="bi bi-trash-fill "></i></a>
                        </td>
                    </tr>

                }
          
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <!--SWEET ALERTS-->
    <script>
        let message = '@(ViewBag.SwalMessage)';

        if (!message.includes("Error") && message != ''){
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            })
        }
        else if (message.includes('Error')){
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Ooops',
                text: message
            })
        }
    </script>
}
