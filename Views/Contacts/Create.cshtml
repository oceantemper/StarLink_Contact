@model StarLink_Contact.Models.Contact

@{
    ViewData["Title"] = "Create";
}


<h1>EDIT CONTACT</h1>
<div class="p-3 border border-2 shadow-lg bg-light">
    <form asp-action="Create" method="post" asp-controller="Contacts" enctype="multipart/form-data">
        <div class="row g-3 p-2">
            <div class="col-12 col-lg-4">
                <div class="square-img-container">
                    <img class="square-img" src="~/img/DefaultContactImage.png" id="contactImage">
                </div>
                <div>
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept=".png,.jpg,.jpeg,.gif"
                           onchange="document.getElementById('contactImage').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="col-12 col-lg-8">
                <div class="row">
                    <div class="col-12 col-lg-6 ">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-2">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-2">
                        <label asp-for="PhoneNumber" class="form-label">Phone</label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-2">
                        <label asp-for="Address1" class="form-label">Address</label>
                        <input asp-for="Address1" class="form-control">
                        <span asp-validation-for="Address1" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-2">
                        <label asp-for="Address2" class="form-label">Address</label>
                        <input asp-for="Address2" class="form-control">
                        <span asp-validation-for="Address2" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-2">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-4 mt-2">
                        <label asp-for="State" class="form-label">State</label>
                        <select asp-for="State" class="form-select" asp-items="ViewBag.StateList">
                        </select>
                    </div>
                    <div class="col-12 col-lg-2 mt-2">
                        <label asp-for="ZipCode" class="form-label"></label>
                        <input asp-for="ZipCode" class="form-control">
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-lg-6 mt-3">
                        <label asp-for="Categories" class="control-label">Categories</label>
                        <select name="CategoryList" class="form-select" multiple asp-items="ViewBag.CategoryList">
                        </select>
                    </div>
                    <div class="col-12 col-lg-6 mt-3">
                        <label asp-for="BirthDate" class="control-label">Birth Date</label>
                        <input asp-for="BirthDate" class="form-control">
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="col-12 d-flex justify-content-end mt-2">
                        <button type="submit" class="btn btn-lg btn-primary rounded-pill">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

